<script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/login.css">

<main>
    <div class="credentials_form">
        <div class="mdl-card__title mdl-color-text--white">
            <h2 class="mdl-card__title-text">Profile</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <form action="/registration" method="post">
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="text" name="email" id="email"/>
                    <label class="mdl-textfield__label" for="email">Почта</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="password" name="password" id="password"/>
                    <label class="mdl-textfield__label" for="password">Пароль</label>
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Зарегистрироваться</button>
                    <span class="mdl-textfield__error">{{ message }}</span>
                </div>
            </form>
        </div>
    </div>
</main>