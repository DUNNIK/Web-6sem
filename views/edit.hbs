<script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/login.css">

<main>
    <div class="credentials_form">
        <div class="mdl-card__title mdl-color-text--white">
            <h2 class="mdl-card__title-text">Изменить профиль</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <form action="/edit" method="post">
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="text" name="name" id="name"/>
                    <label class="mdl-textfield__label" for="name">Имя</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="text" name="surname" id="surname"/>
                    <label class="mdl-textfield__label" for="surname">Фамилия</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="text" name="vkLogin" id="vkLogin"/>
                    <label class="mdl-textfield__label" for="vkLogin">Логин ВКонтакте</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="text" name="instagramLogin" id="instagramLogin"/>
                    <label class="mdl-textfield__label" for="instagramLogin">Логин Инстаграм</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="text" name="telegramLogin" id="telegramLogin"/>
                    <label class="mdl-textfield__label" for="telegramLogin">Логин телеграм</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    <input class="mdl-textfield__input" type="text" name="githubLogin" id="githubLogin"/>
                    <label class="mdl-textfield__label" for="githubLogin">Логин Github</label>
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Запомнить</button>
                    <span class="mdl-textfield__error">{{ message }}</span>
                </div>
            </form>
        </div>
    </div>
</main>
